<div class="col-md-6">
<h1>Change Your Password:</h1>
	<form action="/update_password" method="POST">
	  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	  <div class="form-group">
	  	<label>Current Password:</label>
	  	<input class="form-control" type="password" name="password[curr_password]">
	  </div>
	 	<div class="form-group">
	  	<label>New Password: (more than 8 characters)</label>
	  	<input class="form-control" type="password" name="password[new_password]">
	  </div>
	 	<div class="form-group">
	  	<label>Confirm Password: (must match field above)</label>
	  	<input class="form-control" type="password" name="password[confirmation]">
	  </div>
	  <div class="pull-right">
	  	<button class="btn btn-primary" data-disable-with="Updating..">
	  		<span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Change Password
			</button>
	  </div>
	 </form>
</div>